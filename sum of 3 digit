public class Solution {
    public static void main(String[] args) {
        System.out.println(sumDigitsInNumber(546));
    }

    public static int sumDigitsInNumber(int number) {
        int sum ;
        int n;
        sum =0;
             n = number%10;
           sum = sum + number % 10;
             number = number /10 + number /10 + number /10;
            return sum;
    }
}
